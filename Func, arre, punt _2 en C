#include <stdio.h>

int suma(int, int); //declaraci贸n o prototipo

int suma(int x, int y){ // definici贸n
    int c = x+y;
    return c;
}

int resta(int, int); //declaraci贸n o prototipo

int resta(int x, int y){ // definici贸n
    int c = x-y;
    return c;
}

int main()
{
    int (*p)(int,int);
    p = &suma;
    
    int r = p(2,3);
    printf("El valor es %d\n",r);
    
    p = &resta;
    int s = p(2,1);
    printf("El valor es %d\n",s);
    return 0;
}
