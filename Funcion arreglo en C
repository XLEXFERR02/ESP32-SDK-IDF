#include <stdio.h>

int suma(int x[3]); // declaración o prototipo


int main()
{
    int a[3] = {1,2,3};
    int r = suma(a);   
    printf("El valor de r es %d \n",r);
    return 0;
}

int suma(int x[3]) // definición
    {
        int add = 0;
        for (int i=0; i<3; i++)
            {
                add = add + x[i];
            }
        return add;
    }
